    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
             classpathref="javac2.classpath"/>
  </target>

  <!-- Modules -->

  <import file="${basedir}/idea.pacth.server/module_idea.pacth.server.xml"/>

  <import file="${basedir}/module_kotlin.web.demo.xml"/>

  <import file="${basedir}/kotlin.web.demo.core/module_kotlin.web.demo.core.xml"/>

  <import file="${basedir}/org.jetbrains.junit.runner/module_org.jetbrains.junit.runner.xml"/>

  <import file="${basedir}/kotlin.web.demo.server/module_kotlin.web.demo.server.xml"/>

  <import file="${basedir}/kotlin.web.demo.test/module_kotlin.web.demo.test.xml"/>

  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>

  <target name="clean"
          depends="clean.module.idea.pacth.server, clean.module.kotlin.web.demo, clean.module.kotlin.web.demo.core, clean.module.org.jetbrains.junit.runner, clean.module.kotlin.web.demo.server, clean.module.kotlin.web.demo.test"
          description="cleanup all"/>

  <target name="build.modules"
          depends="init, clean, compile.module.idea.pacth.server, compile.module.kotlin.web.demo, compile.module.kotlin.web.demo.core, compile.module.org.jetbrains.junit.runner, compile.module.kotlin.web.demo.server, compile.module.kotlin.web.demo.test"
          description="build all modules"/>

  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.webdemowar" value="${basedir}/out/production"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.WebDemoWar.war" value="${artifacts.temp.dir}/WebDemoWar.war"/>
  </target>

  <target name="artifact.webdemowar"
          depends="init.artifacts, compile.module.kotlin.web.demo.server, compile.module.idea.pacth.server, compile.module.kotlin.web.demo.core, compile.module.org.jetbrains.junit.runner"
          description="Build &#39;WebDemoWar&#39; artifact">
    <property name="artifact.temp.output.webdemowar" value="${artifacts.temp.dir}/WebDemoWar"/>
    <mkdir dir="${artifact.temp.output.webdemowar}"/>
    <zip destfile="${temp.jar.path.WebDemoWar.war}">
      <zipfileset dir="${kotlin.web.demo.server.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${idea.pacth.server.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${kotlin.web.demo.core.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset src="${basedir}/lib/log4j-1.2.16.jar" prefix="WEB-INF/classes"/>
      <zipfileset file="${basedir}/lib/log4j-1.2.16.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/kotlin-plugin/Kotlin/kotlinc/lib/kotlin-runtime.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/scribe-1.3.5.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/commons-lang-2.4.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/commons-codec-1.6.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/kotlin-plugin/Kotlin/kotlinc/lib/kotlin-compiler.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/kotlin-plugin/Kotlin/kotlinc/lib/kotlin-jdk-annotations.jar"
                  prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/kotlin-plugin/Kotlin/kotlinc/lib/tools/j2k.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/jackson-databind.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/jackson-core.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/jackson-annotations.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/junit.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/kotlin-plugin/Kotlin/lib/kotlin-plugin.jar" prefix="WEB-INF/lib"/>
      <zipfileset dir="${basedir}/kotlin.web.demo.server/web"/>
      <zipfileset dir="${basedir}/kotlin.web.demo.server/static" prefix="static"/>
      <zipfileset dir="${basedir}/kotlin.web.demo.core/resources/js" prefix="js"/>
      <zipfileset file="${basedir}/kotlin.web.demo.server/web/WEB-INF/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${org.jetbrains.junit.runner.output.dir}"/>
    </zip>
    <copy file="${temp.jar.path.WebDemoWar.war}" tofile="${artifact.temp.output.webdemowar}/WebDemoWar.war"/>
  </target>

  <target name="build.all.artifacts" depends="artifact.webdemowar" description="Build all artifacts">
    <mkdir dir="${artifact.output.webdemowar}"/>
    <copy todir="${artifact.output.webdemowar}">
      <fileset dir="${artifact.temp.output.webdemowar}"/>
    </copy>

    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>

  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>