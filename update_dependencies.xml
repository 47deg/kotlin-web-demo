<project name="Update Dependencies" default="download_and_update">
    <property name="build.zip" value="kotlin.zip"/>
    <property name="plugin.build.zip" value="lib/kotlin-plugin.zip"/>

    <property name="teamcity" value="http://teamcity.jetbrains.com"/>
    <property name="teamcity.plugin.build" value="bt345"/>

    <property name="tc.plugin"
              value="${teamcity}/guestAuth/repository/download/${teamcity.plugin.build}/.lastSuccessful"/>
    <property name="path.to.kotlin.plugin" value="lib/kotlin-plugin"/>

    <target name="download_and_update">
        <execute_update/>
        <unzip_kotlin/>
        <set_kotlin_version/>
        <delete file="${plugin.build.zip}" failonerror="false"/>
    </target>

    <target name="update">
        <unzip_kotlin/>
        <set_kotlin_version/>
    </target>

    <macrodef name="unzip_kotlin">
        <sequential>
            <unzip src="${plugin.build.zip}" dest="${path.to.kotlin.plugin}"/>
            <unzip src="${path.to.kotlin.plugin}/Kotlin/lib/kotlin-js-libraries.zip"
                   dest="kotlin.web.demo.core/resources"/>
        </sequential>
    </macrodef>

    <macrodef name="set_kotlin_version">
        <sequential>
            <get src="${teamcity}/guestAuth/app/rest/buildTypes/id:${teamcity.plugin.build}/builds/status:SUCCESS/number"
                 dest="${path.to.kotlin.plugin}/build.txt"/>

            <loadfile srcfile="${path.to.kotlin.plugin}/build.txt" property="version"/>

            <replaceregexp file="kotlin.web.demo.core/src/org/jetbrains/webdemo/server/ServerSettings.java"
                           match="KOTLIN_VERSION = &#34;(.*[0-9]).(.*[0-9]).(.*[0-9])&#34;"
                           replace="KOTLIN_VERSION = &#34;${version}&#34;"
                           byline="true"/>
            <replaceregexp file="kotlin.web.demo.server/static/components/common.js"
                           match="KOTLIN_VERSION = &#34;(.*[0-9]).(.*[0-9]).(.*[0-9])&#34;"
                           replace="KOTLIN_VERSION = &#34;${version}&#34;"
                           byline="true"/>
        </sequential>
    </macrodef>

    <macrodef name="execute_update">
        <sequential>
            <delete dir="${path.to.kotlin.plugin}" failonerror="false"/>
            <get src="${tc.plugin}/kotlin-plugin-{build.number}.zip" dest="${plugin.build.zip}"/>
        </sequential>
    </macrodef>

</project>
